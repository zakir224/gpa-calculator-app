<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.calc.cgpa.cgpacalculator.preference.GradePointPreference">


    <LinearLayout
        style="@style/AppTheme.LinearLayout">


        <TextView
            style="@style/AppTheme.TextView.Preference"
            android:text="Grade"
            android:id="@+id/textView" />

        <EditText
            style="@style/AppTheme.EditText.Preference"
            android:inputType="text"
            android:id="@+id/preference_et_grade"
            android:hint="Grade" />

        </LinearLayout>

    <LinearLayout
        style="@style/AppTheme.LinearLayout">
    <TextView
        style="@style/AppTheme.TextView.Preference"
        android:text="Grade Point"
        android:id="@+id/textView2" />

    <EditText
        style="@style/AppTheme.EditText.Preference"
        android:ems="10"
        android:id="@+id/preference_et_grade_point"
        android:hint="GP" />
    </LinearLayout>
</LinearLayout>
